<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("PokeListe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="nav navbar-nav">
                <li>
                    <a href="/Home/AllTypes">Types</a>
                </li>
                <li>
                    <a href="/Home/AllLoc">Localisations</a>
                </li>
            </ul>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav right">
                @if (PokeListe.Session.SessionUtils.ConnectedUser == null)
                {
                    <li>@Html.ActionLink("LogIn", "Login", "Home", new { area = "" })</li>
                }
                else
                {
                    <li><a href="/Home/LogOff">LogOff</a></li>
                }
                @if (PokeListe.Session.SessionUtils.isAdmin)
                {
                    <li>
                        <a href="/Admin/Home/">Ajout Pokémon</a>
                    </li>

                }
                @if (PokeListe.Session.SessionUtils.ConnectedUser != null)
                {

                    <a href="/Utilisateur/Home">
                        <img src="~/Content/Img/Utilisateurs/@PokeListe.Session.SessionUtils.ConnectedUser.Img" />
                    </a>
                }
            </ul>
        </div>

    </div>
</div>