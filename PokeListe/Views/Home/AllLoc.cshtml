@{
    ViewBag.Title = "Toutes les localisations";
}



<div class="containerVignetteDetails">
    <div class="vignetteDetails">
        <div class="vignetteTitle flex">
            <h2>Liste des localisations</h2>
        </div>
        <div class="vignetteRow">
            <div id="content">
                @foreach (PokeListe.Models.Models.LocalisationViewSimple loc in Model)
                {
                    <div class="vignette">
                        <a href="~/Home/GetLoc/@loc.IdLocalisation">
                            <div>
                                <img src="~/Content/Img/localisation/@loc.Img" />
                            </div>
                            <div>
                                <br />
                                <h4>@loc.Nom</h4>
                            </div>

                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

